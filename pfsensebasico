---
- name: Configurar reglas de firewall en pfSense
  hosts: pfsense
  gather_facts: no
  tasks:
    - name: Permitir tr치fico HTTP y HTTPS
      pfsense_rule:
        interface: lan
        action: pass
        protocol: tcp
        source: any
        destination: any
        destination_port_range: "80:443"
        description: "Permitir tr치fico HTTP y HTTPS"

    - name: Bloquear tr치fico ICMP
      pfsense_rule:
        interface: lan
        action: block
        protocol: icmp
        source: any
        destination: any
        description: "Bloquear tr치fico ICMP"
